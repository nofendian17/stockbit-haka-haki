# Stockbit Credentials
STOCKBIT_PLAYER_ID=
STOCKBIT_USERNAME=
STOCKBIT_PASSWORD=

# Trading WebSocket URL
# Default: wss://wss-trading.stockbit.com/ws
TRADING_WS_URL=wss://wss-trading.stockbit.com/ws

# Database Configuration
# Default: localhost
DB_HOST=localhost
# Default: 5432
DB_PORT=5432
# Default: stockbit_trades
DB_NAME=stockbit_trades
# Default: stockbit
DB_USER=stockbit
# Default: stockbit123
DB_PASSWORD=stockbit123

# Redis Configuration
# Default: localhost
REDIS_HOST=localhost
# Default: 6379
REDIS_PORT=6379
# Default: empty
REDIS_PASSWORD=

# LLM Configuration
# Default: false
LLM_ENABLED=false
# Default: https://ai.onehub.biz.id/v1
LLM_ENDPOINT=https://ai.onehub.biz.id/v1
# Required if LLM_ENABLED is true
LLM_API_KEY=
# Default: qwen3-max
LLM_MODEL=qwen3-max

# Trading Configuration - Position Management
# Minimum interval between signals for the same symbol (minutes)
# Default: 15
TRADING_MIN_SIGNAL_INTERVAL=15
# Maximum concurrent open positions globally
# Default: 10
TRADING_MAX_OPEN_POSITIONS=10
# Maximum positions per symbol
# Default: 1
TRADING_MAX_POSITIONS_PER_SYMBOL=1
# Window to check for duplicate signals (minutes)
# Default: 5
TRADING_SIGNAL_TIME_WINDOW=5

# Trading Configuration - Thresholds
# Minimum Buy Pressure (0.0 - 1.0)
# Default: 0.50 (50%)
TRADING_ORDER_FLOW_THRESHOLD=0.50
# Threshold for "Aggressive Buy" classification (%)
# Default: 55.0
TRADING_AGGRESSIVE_BUY_THRESHOLD=55.0
# Minimum trades for baseline statistical validity
# Default: 30
TRADING_MIN_BASELINE_SAMPLE=30
# Minimum trades for strict baseline statistical validity
# Default: 50
TRADING_MIN_BASELINE_SAMPLE_STRICT=50

# Trading Configuration - Strategy Performance
# Minimum signals to evaluate strategy performance
# Default: 10
TRADING_MIN_STRATEGY_SIGNALS=10
# Win rate below this is considered "Low" (%)
# Default: 40.0
TRADING_LOW_WIN_RATE=40.0
# Win rate above this is considered "High" (%)
# Default: 65.0
TRADING_HIGH_WIN_RATE=65.0

# Trading Configuration - Fail-Safe
# Reject signals if order flow data is unavailable (true/false)
# Default: false
TRADING_REQUIRE_ORDER_FLOW=false

# Trading Configuration - Risk Management
# Cut loss if held too long and loss exceeds this % (positive value representing negative %)
# Default: 1.5
TRADING_MAX_HOLDING_LOSS_PCT=1.5

# Trading Configuration - ATR Multipliers
# Multiplier for Stop Loss distance
# Default: 2.0
TRADING_SL_ATR_MULT=2.0
# Multiplier for Trailing Stop distance
# Default: 2.5
TRADING_TS_ATR_MULT=2.5
# Multiplier for First Take Profit
# Default: 4.0
TRADING_TP1_ATR_MULT=4.0
# Multiplier for Second Take Profit
# Default: 8.0
TRADING_TP2_ATR_MULT=8.0