# Trading Configuration (Advanced)
# Position Management
TRADING_MIN_SIGNAL_INTERVAL=15      # Minutes between signals for same symbol
TRADING_MAX_OPEN_POSITIONS=10       # Max global open positions
TRADING_MAX_POSITIONS_PER_SYMBOL=1  # Max positions per symbol
TRADING_SIGNAL_TIME_WINDOW=5        # Minutes window for duplicate signal check

# Order Flow & Bandarmology (Thresholds)
TRADING_ORDER_FLOW_THRESHOLD=0.5    # 50% buy volume required for entry
TRADING_AGGRESSIVE_BUY_THRESHOLD=60.0 # 60% aggressive buying at Offer required for overrides
TRADING_REQUIRE_ORDER_FLOW=false    # Set to true to REJECT signals if bandarmology data is missing

# Statistical Baseline Quality
TRADING_MIN_BASELINE_SAMPLE=50      # Minimum historical trades for baseline
TRADING_MIN_BASELINE_SAMPLE_STRICT=80 # Minimum strict sample size

# Strategy Performance Filters
TRADING_MIN_STRATEGY_SIGNALS=20     # Min signals before strategy WR evaluation kicks in
TRADING_LOW_WIN_RATE=30.0           # Strategies below this % WR are disabled
TRADING_HIGH_WIN_RATE=65.0          # Strategies above this % WR get confidence boost

# Risk Management
TRADING_MAX_HOLDING_LOSS_PCT=1.5    # Time-based cut loss: Close if held > 60m and loss > 1.5%

# ATR Multipliers (Exit Strategy)
TRADING_SL_ATR_MULT=1.5             # Stop Loss = 1.5x ATR
TRADING_TS_ATR_MULT=1.5             # Trailing Stop = 1.5x ATR
TRADING_TP1_ATR_MULT=3.0            # Take Profit 1 = 3.0x ATR
TRADING_TP2_ATR_MULT=5.0            # Take Profit 2 = 5.0x ATR